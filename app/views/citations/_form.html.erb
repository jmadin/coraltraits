<%= form_for(@citation) do |f| %>
	<%= render 'shared/error_messages', object: @citation %>

	<%= hidden_field_tag :trait, params[:trait] %>
	<%= hidden_field_tag :resource, params[:resource] %>

	<script>
		$(document).ready(function() {
		$('select#simple-example').select2();
		});
	</script>

  <div class="form-group">
	  <%= f.label :trait %>
		<br/><%= f.select :trait_id, Trait.all.map { |u| [u.trait_name, u.id] }, { include_blank: 'Choose trait...', class: "form-control" }, { id: 'simple-example' } %><%= link_to 'Add', new_trait_path, class: "label label-default pull-right" %>
	</div>

  <div class="form-group">
	  <%= f.label :resource %>
		<br/><%= f.select :resource_id, Resource.all.map { |u| ["#{u.author} (#{u.year})", u.id] }, { include_blank: "Choose resource..." }, { id: 'simple-example' } %><%= link_to 'Add', new_resource_path, class: "label label-default pull-right" %>
	</div>

	<div class="form-group">
		<% if current_user.admin? %>
				<%= f.label :user %>
				<%= f.select :user_id, User.all.collect {|a| [a.name, a.id]}, {:selected => current_user.id}, class: "form-control" %>
		<% else %>
			<%= f.label :user %>: <%= current_user.name %>
		  <%= f.hidden_field :user_id, :value => current_user.id %>
		<% end %>
	</div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-md" %>
  </div>
<% end %>
