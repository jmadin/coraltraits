<%= form_for(@coral) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>


	<div class="form-group">
		<%= f.label :coral_species_name %><br>
		<%= f.text_field :coral_name, :placeholder => "Required...", class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :synonyms %>
	  <%= f.fields_for :synonyms do |syn| %>
	  	<% render :partial => "synonym_fields", :locals => { :f => syn } %>
	  <% end %>
  <p><%= link_to_add_association "Add synonym", f, :synonyms %></p>
	</div>

	<div class="form-group">
		<%= f.label :major_clade %><br>
		<%= f.text_field :major_clade, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :family_molecules %><br>
		<%= f.text_field :family_molecules, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :family_morphology %><br>
		<%= f.text_field :family_morphology, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :notes %><br>
		<%= f.text_area :coral_description, class: "form-control" %>
	</div>

	<div class="form-group">
		<% if current_user.admin? %>
				<%= f.label :user %>
				<%= f.select :user_id, User.where(:editor => true).collect {|a| [a.name, a.id]}, {:selected => current_user.id}, class: "form-control" %>
		<% else %>
			<%= f.label :user %>: <%= current_user.name %>
		  <%= f.hidden_field :user_id, :value => current_user.id %>
		<% end %>
	</div>
	
	<%= f.submit "Submit", class: "btn btn-primary btn-md" %>

<% end %>
