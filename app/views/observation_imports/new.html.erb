<%= render 'shared/error_messages', object: @observation_import %>

<div class="col-md-10 col-md-offset-1">

  <div class="col-md-8">
    <h1>
      Importing data
    </h1>
    <hr>
  </div>

  <div class="col-md-4">
    <ul class="list-group">
      <li class="list-group-item">              
        <div class="row">
          <div class="col-md-12">

            <%= form_for @observation_import do |f| %>
              <%= f.radio_button :import_type, "new", :checked => true %>
              <%= f.label :import_type, "Import new observations"  %><br>
              <%= f.radio_button :import_type, "overwrite" %>
              <%= f.label :import_type, "Overwrite existing observations" %>
              <%= f.file_field :file, class: "form-control" %><br>
              <%= f.hidden_field :user_id, :value => current_user.id %>
              <%= f.submit "Import", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>

  <div class="col-md-12">
    <%= markdown File.open(Rails.root + "public/bulk_import.md", 'r').read %>
  </div>

</div>
