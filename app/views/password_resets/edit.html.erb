<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Password reset</h1>

    <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          
          <h4>Errors</h4>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.password_field :password, placeholder: "New password", class: "form-control" %>
      </div> 
      <div class="form-group">        
        <%= f.password_field :password_confirmation , placeholder: "Confirm password", class: "form-control" %>
      </div>
      <div class="actions"><%= f.submit "Update New Password", class: "btn btn-primary btn-md" %></div>
    <% end %>
  </div>
</div>    