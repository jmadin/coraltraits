<%= form_for(@release) do |f| %>
  <%= render 'shared/error_messages', object: @release %>

  <%= f.hidden_field :user_id, :value => current_user.id %>


  <div class="form-group">
    <%= f.label :release_code %><br>
    <%= f.text_field :release_code, :placeholder => "0.0.0 format", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :figshare_doi %><br>
    <%= f.text_field :release_link, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :release_notes %><br>
    <%= f.text_area :release_notes, rows: 8, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>
