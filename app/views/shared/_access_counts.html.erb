<% a = acc.where(:private => false).size %>
<% if a > 0 %>
	<span class="label label-success" data-toggle="tooltip" data-placement="top" title="Number of public observations"><span class="glyphicon glyphicon-ok-circle" style="color:white;"></span> <%= a %></span>
<% end %>
<% p = acc.where(:private => true).size %>
<% if signed_in? && current_user.contributor? && p > 0 %>
	<span class="label label-danger" data-toggle="tooltip" data-placement="top" title="Private observations"><span class="glyphicon glyphicon-remove-circle" style="color:white;"></span> <%= p %></span>
<% elsif a == 0 %>
	<span class="glyphicon glyphicon-remove-circle" style="color:red;"></span>
<% end %>